@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @if (User.IsInRole("unconfirmed"))
    {
        <h1>CAMPUS IT</h1>
        <h2>Обробляємо ваші дані</h2>
        <p class="lead">Ваша заявка очікує обробки адміністратором. Функціонал обмежений</p>
    }
    else
    {
        <h1>CAMPUS IT</h1>
        <h2>Вітаємо!</h2>
        <p class="lead">Відома ураїнська ІТ компанія, спільно з одним із навчальних вищих закладів, розробила інформаційну систему IT Campus для супроводження навчального процесу підготовки IT-спеціалістів.</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">Дізнатись більше</a></p>
    }

</div>

<div class="row">
    
    @if (User.IsInRole("admin"))
    {
    <div class="col-md-4">
        <h2>Адміністратору</h2>
        <br />
        <p><a class="btn btn-default" href="~/Instructors/Create">Додати викладача</a></p>
        <br />
        <p><a class="btn btn-default" href="~/Students/ValidateStudents">Підтвердити користувачів</a></p>
    </div>
    }
    @if (User.IsInRole("student"))
    {
        <div class="col-md-4">
            <h2>Поточні курси</h2>
            <br />
            <p><a class="btn btn-default" href="~/Courses">Дізнатись</a></p>
        </div>
    }
    @if (User.IsInRole("student"))
    {
        <div class="col-md-4">
            <h2>Чому новому навчитись?</h2>
            <br />
            <p><a class="btn btn-default" href="~/Courses">Дізнатись</a></p>
        </div>
    }
    @if (User.IsInRole("instructor"))
    {
        <div class="col-md-4">
            <h2>Чому новому навчитись?</h2>
            <br />
            <p><a class="btn btn-default" href="~/Courses">Дізнатись</a></p>
        </div>
    }

</div>