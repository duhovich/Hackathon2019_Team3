
@{
    ViewBag.Title = "Detail";
}

@model List<Hackathon2019.Models.CoursesViewModel>

<h2>Detail</h2>

    <div class="form-group">
        <div class="col-md-12">
            <label>Ім*я:</label>
            <p>@ViewBag.FirstName</p>

        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-md-12">
            <label>Прізвище:</label>
            <p>@ViewBag.LastName</p>
        </div>
    </div>


<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Назва курсу</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.AsReadOnly())
        {
            <tr>
                <td>@b.Courses</td>
                <td>@Html.ActionLink("Детально", "Details", "Courses", new { b.id }, null)</td>
            </tr>
        }
    </tbody>
</table>
